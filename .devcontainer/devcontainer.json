{
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "hostRequirements": {
      "cpus": 4
    },
    "waitFor": "onCreateCommand",
    "updateContentCommand": "cd sample-app && npm install",
    "postCreateCommand": "",
    "postAttachCommand": {
      "server": "cd sample-app && npm run dev"
    },
    "customizations": {
      "codespaces": {
        "openFiles": [
          "README.md"
        ]
      }
    },
    "portsAttributes": {
      "3000": {
        "label": "Application",
        "onAutoForward": "openPreview"
      }
    },
    "forwardPorts": [3000]
  }
  